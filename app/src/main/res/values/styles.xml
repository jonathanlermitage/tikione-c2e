<resources>

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/CPCMainColor</item>
        <item name="colorPrimaryDark">@color/CPCMainColorDark</item>
        <item name="colorAccent">@color/CPCSecondColor</item>
        <item name="android:colorBackground">@color/background_material_lighter</item>
        <item name="android:windowBackground">@color/background_material_lighter</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.coloredButton" parent="android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/CPCMainColor</item>
    </style>

    <style name="AppTheme.ColoredButton.Framed" parent="@style/AppTheme.coloredButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:color">@color/CPCMainColor</item>
        <item name="android:background">@drawable/rectangle_white_border</item>
    </style>


    <style name="AppTheme.ColoredButton.Borderless" parent="android:style/Widget.Button">
        <item name="android:layout_margin">0dip</item>

        <item name="android:textColor">@color/CPCMainColor</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.RegisterHint" parent="android:style/Widget.TextView">
        android:id="@+id/RegisterMailHint"
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">-25dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@color/CPCMainColor</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="AppTheme.ColoredButton.Transparent" parent="@style/AppTheme.coloredButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/CPCMainColorTransparent</item>
    </style>

</resources>
